<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Lord Mobile Notifier"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbAttack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Attack"
            app:layout_constraintStart_toStartOf="@+id/cbMysteryBox"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <CheckBox
            android:id="@+id/cbShield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Shield"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/cbMerging"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <CheckBox
            android:id="@+id/cbRally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8sp"
            android:text="Rally\n(5 minutes -\n1 hours)"
            app:layout_constraintStart_toStartOf="@+id/cbTrapBuilding"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <CheckBox
            android:id="@+id/cbDarkness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Darkness Rally\n(5 minutes - 1 hours)\n(lv3 - lv5)"
            app:layout_constraintStart_toStartOf="@id/cbScout"
            app:layout_constraintTop_toBottomOf="@id/cbScout" />

        <CheckBox
            android:id="@+id/cbEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Full Energy"
            app:layout_constraintStart_toStartOf="@+id/cbShield"
            app:layout_constraintTop_toBottomOf="@+id/cbShield" />

        <CheckBox
            android:id="@+id/cbScout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Scout"
            app:layout_constraintStart_toStartOf="@+id/cbAttack"
            app:layout_constraintTop_toBottomOf="@+id/cbRally" />

        <CheckBox
            android:id="@+id/cbWatcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Watcher Event"
            app:layout_constraintStart_toStartOf="@+id/cbRally"
            app:layout_constraintTop_toBottomOf="@+id/cbRally" />

        <CheckBox
            android:id="@+id/cbShelter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Shelter"
            app:layout_constraintStart_toStartOf="@+id/cbCargoReset"
            app:layout_constraintTop_toBottomOf="@+id/cbCargoReset" />

        <CheckBox
            android:id="@+id/cbMerging"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Merging Pack"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginLeft="8dp" />


        <CheckBox
            android:id="@+id/cbFamiliarGym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Familiar Gym"
            app:layout_constraintStart_toStartOf="@+id/cbEnergy"
            app:layout_constraintTop_toBottomOf="@+id/cbEnergy" />

        <CheckBox
            android:id="@+id/cbTroopsTraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Troops Training"
            app:layout_constraintStart_toStartOf="@+id/cbShelter"
            app:layout_constraintTop_toBottomOf="@+id/cbShelter" />

        <CheckBox
            android:id="@+id/cbCargoReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cargo Reset"
            app:layout_constraintStart_toStartOf="@+id/cbMerging"
            app:layout_constraintTop_toBottomOf="@+id/cbMerging" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/red"
            android:text="Online Notification (Not Guaranted)"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/cbMysteryBox"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:text="Offline Notification (Guaranted)"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ntSeekBar"
            app:layout_constraintStart_toStartOf="@+id/ntSeekBar"
            app:layout_constraintTop_toBottomOf="@+id/ntSeekBar"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/cbBuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Building"
            app:layout_constraintStart_toStartOf="@+id/cbFamiliarGym"
            app:layout_constraintTop_toBottomOf="@+id/cbFamiliarGym" />

        <CheckBox
            android:id="@+id/cbResearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Research"
            app:layout_constraintStart_toStartOf="@+id/cbTroopsTraining"
            app:layout_constraintTop_toBottomOf="@+id/cbTroopsTraining" />

        <CheckBox
            android:id="@+id/cbForging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Forging"
            app:layout_constraintStart_toStartOf="@+id/cbBuilding"
            app:layout_constraintTop_toBottomOf="@+id/cbBuilding" />

        <CheckBox
            android:id="@+id/cbMysteryBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mystery Box"
            app:layout_constraintStart_toStartOf="@+id/cbResearch"
            app:layout_constraintTop_toBottomOf="@+id/cbResearch" />

        <CheckBox
            android:id="@+id/cbTrapBuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Trap Building"
            app:layout_constraintStart_toStartOf="@+id/cbForging"
            app:layout_constraintTop_toBottomOf="@+id/cbForging" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/ntSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Disabled"
            android:checked="false"
            android:theme="@style/SwitchTheme"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints" />

        <SeekBar
            android:id="@+id/ntSeekBar"
            android:layout_width="200dp"
            android:layout_height="31dp"
            android:max="1000"
            android:progress="500"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Alarm Volume"
            app:layout_constraintEnd_toEndOf="@+id/ntSwitch"
            app:layout_constraintStart_toStartOf="@+id/ntSwitch"
            app:layout_constraintTop_toBottomOf="@+id/ntSwitch" />

        <View
            android:id="@+id/garis1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="36dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbDarkness" />

        <TextView
            android:id="@+id/textView6"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="156dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="18dp"
            android:text="Note"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/garis1" />

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="@string/app_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
